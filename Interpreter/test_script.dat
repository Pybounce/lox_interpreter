
var score = 0;


while (true) {
    var target = to_double(random_range_rounded(0, 20));
    var guess = nil;
    
    print_line("");
    print_line("Guess the number between 0-20");
    print("Guess: ");
    guess = to_double(read_line());


    while (guess != target) {
        print_line("");
        print_line(to_string(guess) + " was incorrect!");
        print("Guess: ");
        guess = to_double(read_line());
    }
    print_line("");

    score = score + 1;
    print_line(to_string(guess) + " is correct!");
    print_line("Your score is now " + to_string(score));
}
